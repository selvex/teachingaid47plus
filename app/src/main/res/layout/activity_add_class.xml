<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="siriuscyberneticscorporation.teachingaid47plus.AddClassActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="new class"
        android:layout_marginTop="97dp"
        android:id="@+id/new_class_button"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="assign subject to class"
        android:id="@+id/existing_class_button"
        android:textStyle="bold"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/new_class_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

</RelativeLayout>






