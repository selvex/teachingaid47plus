<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddSubjectActivity">

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorApp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="30dp"
            android:text="@string/heading_add_new_subject"
            android:textSize="25sp"
            android:id="@+id/add_students_textView" />
    </android.support.v7.widget.ButtonBarLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subject_edittext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="@string/prompt_subject"
        android:maxLines="1"
        android:singleLine="true"
        android:imeActionId="@+id/subject"
        android:imeActionLabel="@string/action_enter_subject"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/promt_done"
        android:id="@+id/done_button"
        android:layout_below="@+id/subject_edittext"
        android:layout_alignRight="@+id/subject_edittext"
        android:layout_alignEnd="@+id/subject_edittext"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
